generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String
  role      Role     @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  quotations  Quotation[]
  oauthTokens OAuthToken[]
}

enum Role {
  ADMIN
  USER
}

// ── Company ─────────────────────────────────────────

model Company {
  id        String   @id @default(uuid())
  name      String
  taxId     String?
  address   String?
  phone     String?
  email     String?
  website   String?
  fax       String?
  industry  String?
  notes     String?  @db.Text

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  contacts   ContactCompany[]
  quotations Quotation[]       @relation("CompanyQuotations")
}

// ── Contact System ──────────────────────────────────

enum SyncProvider {
  GOOGLE
  OUTLOOK
  NOTION
}

enum SyncStatus {
  SYNCED
  PENDING
  ERROR
}

enum SyncDirection {
  INBOUND
  OUTBOUND
  BOTH
}

model Contact {
  id          String  @id @default(uuid())
  displayName String
  firstName   String?
  lastName    String?
  email       String?
  phone       String?
  address     String?
  notes       String? @db.Text

  // Name card image
  nameCardPath String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  companies        ContactCompany[]
  tags             ContactTag[]
  externalLinks    ExternalContactLink[]
  personQuotations Quotation[]           @relation("ContactPersonQuotations")
}

model ContactCompany {
  id        String   @id @default(uuid())
  contactId String
  contact   Contact  @relation(fields: [contactId], references: [id], onDelete: Cascade)
  companyId String
  company   Company  @relation(fields: [companyId], references: [id], onDelete: Cascade)
  jobTitle  String?
  createdAt DateTime @default(now())

  @@unique([contactId, companyId])
}

model Tag {
  id       String @id @default(uuid())
  name     String @unique
  color    String @default("#6D28D9")

  contacts       ContactTag[]
  notionMapping  NotionDatabaseMapping?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ContactTag {
  contactId String
  contact   Contact @relation(fields: [contactId], references: [id], onDelete: Cascade)
  tagId     String
  tag       Tag     @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@id([contactId, tagId])
}

model ExternalContactLink {
  id           String       @id @default(uuid())
  contactId    String
  contact      Contact      @relation(fields: [contactId], references: [id], onDelete: Cascade)
  provider     SyncProvider
  externalId   String
  externalData Json?
  lastSyncedAt DateTime?
  syncStatus   SyncStatus   @default(PENDING)
  syncError    String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([provider, externalId])
}

model NotionDatabaseMapping {
  id                 String   @id @default(uuid())
  notionDatabaseId   String   @unique
  notionDatabaseName String
  tagId              String?  @unique
  tag                Tag?     @relation(fields: [tagId], references: [id], onDelete: Restrict)
  enabled            Boolean  @default(true)
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
}

model IntegrationConfig {
  id       String       @id @default(uuid())
  provider SyncProvider @unique
  enabled  Boolean      @default(false)
  config   Json         @default("{}")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model OAuthToken {
  id           String       @id @default(uuid())
  userId       String
  user         User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  provider     SyncProvider
  accessToken  String
  refreshToken String?
  expiresAt    DateTime?
  scope        String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, provider])
}

model SyncLog {
  id               String        @id @default(uuid())
  provider         SyncProvider
  direction        SyncDirection
  status           SyncStatus
  contactId        String?
  externalId       String?
  message          String?
  errorDetails     String?       @db.Text
  recordsProcessed Int           @default(0)

  createdAt DateTime @default(now())
}

// ── Quotation System ────────────────────────────────

model Quotation {
  id              String   @id @default(uuid())
  quotationNumber String   @unique // e.g., #140
  projectName     String // 專案名稱
  quotationDate   DateTime // 報價日期

  // Relations
  companyId       String
  company         Company  @relation("CompanyQuotations", fields: [companyId], references: [id])
  contactPersonId String?
  contactPerson   Contact? @relation("ContactPersonQuotations", fields: [contactPersonId], references: [id])
  createdById     String
  createdBy       User     @relation(fields: [createdById], references: [id])

  // Pricing
  items           QuotationItem[]
  originalTotal   Decimal         @db.Decimal(12, 2) // 原價總計 (未稅)
  discountedTotal Decimal         @db.Decimal(12, 2) // 專案優惠價
  taxIncluded     Boolean         @default(true) // 是否含稅

  // Terms (one-to-many)
  paymentTerms PaymentTerm[]
  notes        QuotationNote[]

  status    QuotationStatus @default(DRAFT)
  createdAt DateTime        @default(now())
  updatedAt DateTime        @updatedAt
}

enum QuotationStatus {
  DRAFT
  SENT
  ACCEPTED
  REJECTED
  EXPIRED
}

model PaymentTerm {
  id          String    @id @default(uuid())
  quotationId String
  quotation   Quotation @relation(fields: [quotationId], references: [id], onDelete: Cascade)
  content     String
  sortOrder   Int
  createdAt   DateTime  @default(now())
}

model QuotationNote {
  id          String    @id @default(uuid())
  quotationId String
  quotation   Quotation @relation(fields: [quotationId], references: [id], onDelete: Cascade)
  content     String
  sortOrder   Int
  createdAt   DateTime  @default(now())
}

model QuotationItem {
  id          String    @id @default(uuid())
  quotationId String
  quotation   Quotation @relation(fields: [quotationId], references: [id], onDelete: Cascade)

  itemNumber  Int // 項次
  description String // 內容細項
  details     String? @db.Text // Detailed description
  amount      Decimal @db.Decimal(12, 2) // 金額

  createdAt DateTime @default(now())
}
